{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "/src/infra/http/**/*.d.ts"
    ],
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts"
  ]
}